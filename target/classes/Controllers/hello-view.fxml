<VBox alignment="CENTER" prefHeight="576.0" prefWidth="386.0" spacing="20.0" style="-fx-background-color: ADD8E6;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <VBox alignment="BOTTOM_LEFT" prefHeight="276.0" prefWidth="346.0" style="-fx-border-color: black;">
      <children>
         <Label text="Playlist View" />
         <SplitPane dividerPositions="0.8093385214007782" orientation="VERTICAL" prefHeight="266.0" prefWidth="346.0">
           <items>
             <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="132.0" prefWidth="104.0">
                  <children>
                     <SplitPane dividerPositions="0.5" prefHeight="187.0" prefWidth="344.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                       <items>
                         <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                              <children>
                                 <ListView fx:id="playlistView" onMouseClicked="#onClickTableItem" prefHeight="185.0" prefWidth="166.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                              </children>
                           </AnchorPane>
                         <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                              <children>
                                 <ListView fx:id="songView" onMouseClicked="#onClickSongItem" prefHeight="185.0" prefWidth="170.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                              </children>
                           </AnchorPane>
                       </items>
                     </SplitPane>
                  </children>
               </AnchorPane>
             <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="47.0" prefWidth="344.0">
                  <children>
                     <Button fx:id="createPlaylist" layoutX="7.0" layoutY="7.0" mnemonicParsing="false" onAction="#onFileButtonPressed" text="Create New Playlist" />
                  </children>
               </AnchorPane>
           </items>
         </SplitPane>
      </children>
   </VBox>
   <TextArea fx:id="metaDisplay" prefHeight="68.0" prefWidth="346.0" style="-fx-border-color: black;" />
   <Slider fx:id="sliderSeeker" />
   <AnchorPane prefHeight="32.0" prefWidth="346.0">
      <children>
         <Button fx:id="nextButton" layoutX="230.0" layoutY="7.0" mnemonicParsing="false" onAction="#changeToNextSong" text="Next" />
       <Button fx:id="prevButton" layoutX="150.0" layoutY="7.0" mnemonicParsing="false" onAction="#changeToPrevSong" text="Prev." />
         <Button fx:id="repeat" layoutX="76.0" layoutY="7.0" mnemonicParsing="false" onAction="#onRepeatButtonPressed" text="R1" />
      </children>
   </AnchorPane>

    <Label fx:id="welcomeText" />
   <ToolBar>
      <items>
         <Slider fx:id="sliderVolume" prefHeight="14.0" prefWidth="168.0">
            <padding>
               <Insets right="10.0" />
            </padding>
         </Slider>
         <MediaView fx:id="mediaView" visible="false" />
          <Button fx:id="pausePlay" onAction="#onPauseButtonPressed" prefHeight="25.0" prefWidth="27.0" />
         <ImageView fitHeight="41.0" fitWidth="159.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@shuffle.png" />
            </image>
         </ImageView>
      </items>
   </ToolBar>
</VBox>
